{
  "version": "v2",
  "title": "Pela fé uma vez...",
  "tone": {
    "recommended": "C"
  },
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "     C",
            "lyrics": "Pela fé uma vez por Jesus dada_aos santos,"
          },
          {
            "chords": "      G7                         C",
            "lyrics": "Fé perfeita que fez vitoriosos a tantos,"
          },
          {
            "chords": "                           G7  ",
            "lyrics": "Não temeram horrores nem espantos"
          },
          {
            "chords": "                            C",
            "lyrics": "Os fiéis que seguiram ao Senhor."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "        C",
            "lyrics": "Nas tristezas, nas lutas e dor,"
          },
          {
            "chords": "             D     G7 ",
            "lyrics": "Recorriam a Cristo Jesus,"
          },
          {
            "chords": "         Am      F        C",
            "lyrics": "Que lhes dava virtude_e valor,"
          },
          {
            "chords": "     G7                   C",
            "lyrics": "Pela fé que_os guiava na luz."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "       C",
            "lyrics": "Os cristãos foram, nos tribunais, condenados,"
          },
          {
            "chords": "       G7                             C",
            "lyrics": "Nas prisões eles foram, sem culpa, lançados,"
          },
          {
            "chords": "                                 G7 ",
            "lyrics": "E, de seus bens terrestres, despojados;"
          },
          {
            "chords": "                        C",
            "lyrics": "Tudo isso sofreram pela fé."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "      C",
            "lyrics": "Nessa fé é que nós, crentes, sempre devemos"
          },
          {
            "chords": "    G7                              C",
            "lyrics": "Caminhar bem firmados, e_assim venceremos;"
          },
          {
            "chords": "                          G7 ",
            "lyrics": "E um dia, no céu, encontraremos"
          },
          {
            "chords": "                          C",
            "lyrics": "Os fiéis que amaram ao Senhor."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "       C",
            "lyrics": "Lá no céu não teremos mais dor"
          },
          {
            "chords": "              D        G7 ",
            "lyrics": "E o pranto também cessará,"
          },
          {
            "chords": "       Am     F       C",
            "lyrics": "Pois o nosso amado Senhor,"
          },
          {
            "chords": "       G7              C",
            "lyrics": "Nossas lágrimas, enxugará."
          }
        ]
      }
    ]
  }
}
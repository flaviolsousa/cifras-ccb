{
  "version": "v2",
  "title": "Lembra-te do teu Criador!",
  "tone": "G",
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "G                   Am ",
            "lyrics": "Nos dias da tua peregrinação,"
          },
          {
            "chords": "D7                         G",
            "lyrics": "Usa_o tempo servindo_ao Senhor"
          },
          {
            "chords": "                       Am ",
            "lyrics": "E, com alegria, cumpre a missão;"
          },
          {
            "chords": "D7                G",
            "lyrics": "Lembra-te do Criador!"
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "        G      E7           A7 ",
            "lyrics": "Debaixo do sol    tudo_é vaidade,"
          },
          {
            "chords": "          D7           G  ",
            "lyrics": "Recorre_a Deus, o Formador;"
          },
          {
            "chords": "                E7        A7 ",
            "lyrics": "Nos breves dias    da mocidade,"
          },
          {
            "chords": "         D7           G",
            "lyrics": "Não te esqueças do Senhor!"
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "G                     Am ",
            "lyrics": "Os preditos dias logo hão de vir,"
          },
          {
            "chords": "D7                          G",
            "lyrics": "Serve, pois, a Deus, o Formador;"
          },
          {
            "chords": "                         Am ",
            "lyrics": "“Vinde, ó benditos”, tu irás ouvir"
          },
          {
            "chords": "D7                 G",
            "lyrics": "De Jesus, teu Redentor."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "G                         Am ",
            "lyrics": "Mesmo tendo, neste mundo, muitos bens"
          },
          {
            "chords": "D7                  G",
            "lyrics": "E a vida cheia de vigor,"
          },
          {
            "chords": "                          Am ",
            "lyrics": "É maior a_herança que, na glória, tens"
          },
          {
            "chords": "D7              G",
            "lyrics": "Com o santo Criador."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      }
    ]
  }
}
{
  "version": "v2",
  "title": "Se fores tentado",
  "tone": "G",
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "G           D     Em          B7 ",
            "lyrics": "Se fores tentado, não deves ceder,"
          },
          {
            "chords": "C            G    D         G",
            "lyrics": "Resiste ao pecado até o vencer;"
          },
          {
            "chords": "           D    Em              B7 ",
            "lyrics": "Sê mui valoroso com fé que Deus dá,"
          },
          {
            "chords": "C          G     D          G",
            "lyrics": "Então o inimigo, de ti, fugirá."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": " G             D      Em           B7 ",
            "lyrics": "Não manches as vestes que Cristo lavou;"
          },
          {
            "chords": "C             G        D           G",
            "lyrics": "Para embranquecê-las, sangue derramou;"
          },
          {
            "chords": "            D     Em         B7 ",
            "lyrics": "Rejeita o pecado, procura imitar"
          },
          {
            "chords": "C           G      D         G",
            "lyrics": "Os que o venceram sem desanimar."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "G             D     Em        B7 ",
            "lyrics": "Se forças te faltam para combater,"
          },
          {
            "chords": " C              G    D         G",
            "lyrics": "Deus, o Onipotente, pode te valer;"
          },
          {
            "chords": "               D      Em        B7 ",
            "lyrics": "A quem busca auxílio, vitória dará,"
          },
          {
            "chords": " C           G     D         G",
            "lyrics": "Jamais confundido Ele o deixará."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "G                     D             G",
            "lyrics": "Só em Cristo confia, seja noite ou dia,"
          },
          {
            "chords": "C           G   D           G",
            "lyrics": "E terás alegria em teu coração."
          }
        ]
      }
    ]
  }
}
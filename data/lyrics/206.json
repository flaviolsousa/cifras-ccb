{
  "version": "v2",
  "title": "Tu és o Amigo",
  "tone": {
    "recommended": "E"
  },
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": ".  B7    E       C#7      F#m ",
            "lyrics": "Tu és o Amigo sincero_e leal"
          },
          {
            "chords": "F#7  B7                E",
            "lyrics": "Dos  que Te adoram, Senhor;"
          },
          {
            "chords": "   B7           E          C#7       F#m ",
            "lyrics": "Tu sempre_os proteges e_os livras do mal,"
          },
          {
            "chords": "    E     F#7       B7 ",
            "lyrics": "Por Tua Palavra de_amor."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "E",
            "lyrics": "Com Teu poder, Senhor,"
          },
          {
            "chords": "B7     E",
            "lyrics": "Sempre guardas"
          },
          {
            "chords": "          F#m      E           A ",
            "lyrics": "As nossas almas no Teu grande_amor,"
          },
          {
            "chords": "B7            E",
            "lyrics": "Ó Jesus, Redentor."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": ".  B7       E       C#7      F#m ",
            "lyrics": "És sempre fiel, ó Jesus Salvador,"
          },
          {
            "chords": "F#7  B7                   E",
            "lyrics": "Do   céu nos trouxeste a luz;"
          },
          {
            "chords": "  B7          E        C#7    F#m ",
            "lyrics": "Sofreste, por nós, amargura e dor,"
          },
          {
            "chords": "   E      F#7      B7 ",
            "lyrics": "No duro madeiro da cruz."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": ".   B7      E          C#7      F#m ",
            "lyrics": "Por Ti, ó Jesus, temos vida_eternal,"
          },
          {
            "chords": "F#7   B7                E",
            "lyrics": "Tam - bém as riquezas reais,"
          },
          {
            "chords": "   B7          E          C#7        F#m ",
            "lyrics": "As quais nos darás no Teu lar celestial,"
          },
          {
            "chords": "   E          F#7     B7 ",
            "lyrics": "Se formos, em tudo, leais."
          }
        ]
      },

        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "     C                          F     G    C",
            "lyrics": "Seguiremos a Jesus Cristo com inteira confiança,"
          },
          {
            "chords": "           G   C           F      D       G",
            "lyrics": "Temos viva esperança de chegar ao lar de_amor,"
          },
          {
            "chords": "    Am     G   C          F     G    C    C...",
            "lyrics": "Dirigidos, amparados pelo sábio Condutor."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "     C                          F     G   C",
            "lyrics": "Só a Cristo daremos glória e louvores em eterno,"
          },
          {
            "chords": "                G    C           F    D    G",
            "lyrics": "Pois livrou-nos do inferno, do pecado e do mal,"
          },
          {
            "chords": "     Am      G   C            F     G    C",
            "lyrics": "Para dar-nos a herança no Seu lar celestial."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "C           F        G     C",
            "lyrics": "  Glória_ao Justo, fiel Cordeiro,"
          },
          {
            "chords": "        G           C",
            "lyrics": "  Puro, Santo, Verdadeiro!"
          },
          {
            "chords": "       F     G    C",
            "lyrics": "  Pela morte no madeiro,"
          },
          {
            "chords": "        F    G        C",
            "lyrics": "  Nos reconciliou com Deus."
          }
        ]
      }
    ]

        "verses": [
          {
            "chords": "           F#m      B7          E",
            "lyrics": "Conserva a paz, tem fé, ó minha alma,"
          },
          {
            "chords": "          F#m      B7          E",
            "lyrics": "Suporta a cruz com paciência e fé;"
          },
          {
            "chords": "           C#m7              F#m ",
            "lyrics": "Deus te provê de confiança e calma"
          },
          {
            "chords": "         E      B7          E",

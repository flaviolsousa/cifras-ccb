{
  "version": "v2",
  "title": "Com fé combate",
  "tone": "G",
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "G                   D        G",
            "lyrics": "Com Cristo podes ao mal resistir,"
          },
          {
            "chords": "                     A7        D ",
            "lyrics": "Os Seus conselhos tu deves guardar;"
          },
          {
            "chords": "G              D      G",
            "lyrics": "Se desejares coroa cingir,"
          },
          {
            "chords": "                      D     G",
            "lyrics": "Não deves, nas lutas, desanimar."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "G",
            "lyrics": "Com fé combate, sê fervoroso,"
          },
          {
            "chords": "D                 G",
            "lyrics": "Tu vencerás com valor;"
          },
          {
            "chords": "",
            "lyrics": "Cristo promete ao vitorioso,"
          },
          {
            "chords": "C      D            G",
            "lyrics": "O galardão de_esplendor."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "G                  D       G",
            "lyrics": "Em Cristo tens a divina mercê,"
          },
          {
            "chords": "               A7    D ",
            "lyrics": "Em tudo, vitorioso serás;"
          },
          {
            "chords": "G               D        G",
            "lyrics": "Sê corajoso, combate com fé,"
          },
          {
            "chords": "                   D      G",
            "lyrics": "Caminha com Cristo e vencerás."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": " G                     D        G",
            "lyrics": "“Ao que vencer”, disse Cristo Jesus,"
          },
          {
            "chords": "                    A7       D ",
            "lyrics": "“Seu nome, do livro não riscarei”;"
          },
          {
            "chords": "G                D         G",
            "lyrics": "Receberá, no Seu reino de luz,"
          },
          {
            "chords": "                D           G",
            "lyrics": "O galardão do Senhor, nosso Rei."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      }
    ]
  }

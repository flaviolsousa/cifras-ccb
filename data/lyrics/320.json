        "verses": [
          {
            "chords": "       B                             E ",
            "lyrics": "Que prazer é_andar com Cristo, desfrutar o Seu amor,"
          },
          {
            "chords": "     F#                     B             B...",
            "lyrics": "Combater a_iniquidade e, ao fim, ser vencedor;"
          },
          {
            "chords": "      B                          E ",
            "lyrics": "Neste mundo, o Senhor por nós morreu na dura cruz"
          },
          {
            "chords": "     F#                         B         B...",
            "lyrics": "Para dar-nos vida_e glória onde há eterna luz."
          }
        ]
      },

        "verses": [
          {
            "chords": "      B            E ",
            "lyrics": "Jesus Cristo é poderoso,"
          },
          {
            "chords": "       F#             B",
            "lyrics": "Forte, santo, mui valoroso,"
          },
          {
            "chords": "                  E ",

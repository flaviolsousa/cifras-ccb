{
  "version": "v2",
  "title": "Seguro estou...",
  "tone": "G",
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "          G            D           G",
            "lyrics": "Seguro estou de que Jesus, me ajudará"
          },
          {
            "chords": "                         D          G",
            "lyrics": "E, lá do céu, de força e fé me proverá;"
          },
          {
            "chords": "     C                 D7          G",
            "lyrics": "Se a ele eu servir e a Sua lei cumprir,"
          },
          {
            "chords": "                          D          G",
            "lyrics": "Bem certo estou de que Jesus me ajudará."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "         G          D        G",
            "lyrics": "Não deixará a minha fé se abalar;"
          },
          {
            "chords": "                      D           G",
            "lyrics": "Eu seguirei ao meu Senhor sem duvidar;"
          },
          {
            "chords": "     C                   D7            G",
            "lyrics": "Com afeto guardarei a doutrina do meu Rei"
          },
          {
            "chords": "                         D           G",
            "lyrics": "Que, neste mundo, orientará meu caminhar."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "         G          D          G",
            "lyrics": "Meu coração está firmado no Senhor,"
          },
          {
            "chords": "                 D         G             ",
            "lyrics": "Alicerçado nessa Rocha de amor;"
          },
          {
            "chords": "        C                        D7           G",
            "lyrics": "Cristo irá me receber quando, em glória, aparecer;"
          },
          {
            "chords": "                        D         G",
            "lyrics": "Firmado estou no meu bendito Redentor."
          }
        ]
      }
    ]
  }

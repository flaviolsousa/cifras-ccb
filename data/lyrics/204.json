  "title": "Só Jesus é Amigo verdadeiro",
  "tone": "D",
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "      D                     A ",
            "lyrics": "Contarei a todos a real grandeza,"
          },
          {
            "chords": "     A7                  D",
            "lyrics": "A virtude recebida do Senhor:"
          },
          {
            "chords": "                    D7          G ",
            "lyrics": "Transformou a minha vida de tristeza"
          },
          {
            "chords": "    Bm7          E7       A ",
            "lyrics": "Em alegre vida, cheia de amor."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "      A               D",
            "lyrics": "Só Jesus é Amigo verdadeiro,"
          },
          {
            "chords": "      A               D",
            "lyrics": "Conservar desejo Seu amor;"
          },
          {
            "chords": "                    D7        G ",
            "lyrics": "Por minh´alma deu a vida no madeiro;"
          },
          {
            "chords": " D                A    D",
            "lyrics": "Glória, glória ao Salvador!"
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "      D                            A ",
            "lyrics": "Eu jamais me esquecerei do amor sincero"
          },
          {
            "chords": "         A7                          D",
            "lyrics": "Que o Senhor manifestou por mim, na cruz;"
          },
          {
            "chords": "                   D7            G ",
            "lyrics": "No meu coração, senti-lo sempre quero,"
          },
          {
            "chords": "       Bm7     E7                 A ",
            "lyrics": "Pois é esse o amor que ao céu conduz."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "     D                          A ",
            "lyrics": "Não existe amor maior que o de Cristo,"
          },
          {
            "chords": "     A7                      D",
            "lyrics": "Não existe outro amigo tão fiel;"
          },
          {
            "chords": "                 D7               G ",
            "lyrics": "Um sublime amor assim jamais foi visto,"
          },
          {
            "chords": "      Bm7           E7          A ",
            "lyrics": "A não ser em Jesus Cristo, Emanuel."
          }
        ]

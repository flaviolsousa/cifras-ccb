{
  "version": "v2",
  "title": "Quem sustenta a nossa vida",
  "tone": {
    "recommended": "C"
  },
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "        C                        G7 ",
            "lyrics": "Quem sustenta_a nossa vida é_a Palavra do Senhor,"
          },
          {
            "chords": "                                     C",
            "lyrics": "Que anima, edifica e nos traz consolação,"
          },
          {
            "chords": "                             C7          F ",
            "lyrics": "E que une_a alma_humilde ao amor do Redentor;"
          },
          {
            "chords": "                C            G            C",
            "lyrics": "É_a Palavra poderosa que faz crer na salvação."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "    G7           C           G7        C",
            "lyrics": "A Palavra do bom Criador é a Guia do remido"
          },
          {
            "chords": "      G7       C           D7         G ",
            "lyrics": "Na jornada a caminho das moradas do Fiel;"
          },
          {
            "chords": "    C           F           G          C",
            "lyrics": "É Palavra de virtude, que levanta o_abatido;"
          },
          {
            "chords": "                 F          G           C",
            "lyrics": "É Espada de dois gumes, é o Verbo,_Emanuel."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "      C                        G7 ",
            "lyrics": "Proclamemos que Jesus não tardará em retornar,"
          },
          {
            "chords": "                                        C",
            "lyrics": "Vamos sempre_obedecê-Lo e de coração O_amar;"
          },
          {
            "chords": "                          C7             F ",
            "lyrics": "Estejamos vigilantes, esperando_o Seu voltar,"
          },
          {
            "chords": "                    C          G         C",
            "lyrics": "Pois em breve a trombeta todos vamos escutar."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "      C                   G7 ",
            "lyrics": "Não sejamos ociosos em servir o grande Rei,"
          },
          {
            "chords": "                                         C",
            "lyrics": "Mas sejamos fervorosos para sempre_O atender;"
          },
          {
            "chords": "                               C7        F ",
            "lyrics": "Com as divinais virtudes cumpriremos Sua lei,"
          },
          {
            "chords": "                  C              G         C",
            "lyrics": "Subiremos para_a glória, lar do_Onipotente Ser."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      }
    ]
  }
}
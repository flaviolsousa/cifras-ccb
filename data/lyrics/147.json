{
  "version": "v2",
  "title": "É bom louvar ao Criador",
  "tone": {
    "recommended": "G"
  },
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "  G                        C               G",
            "lyrics": "É bom louvar ao Criador, alçar a voz em louvor,"
          },
          {
            "chords": "   D           G                           D ",
            "lyrics": "Contar as Suas obras e lembrar Seu grande amor,"
          },
          {
            "chords": "           D7     G        Em        B7 ",
            "lyrics": "Render-Lhe santo culto, sincera adoração;"
          },
          {
            "chords": "   C            G     D           G",
            "lyrics": "É bom, perante Ele, andar em retidão."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "  D        G",
            "lyrics": "Fiéis adoradores,"
          },
          {
            "chords": "   C             G",
            "lyrics": "Louvai ao Deus vivente;"
          },
          {
            "chords": "                   C ",
            "lyrics": "Por Seus imensos favores,"
          },
          {
            "chords": "   D          G",
            "lyrics": "Louvai ao Criador!"
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "   G                    C             G",
            "lyrics": "Sinceramente exaltai o santo Nome de Deus,"
          },
          {
            "chords": "   D          G                              D ",
            "lyrics": "Cantai alegremente ao Senhor que habita nos céus,"
          },
          {
            "chords": "      D7       G       Em             B7 ",
            "lyrics": "O coração e a mente ao grande Deus elevai;"
          },
          {
            "chords": "   C          G         D          G",
            "lyrics": "Ó filhos do Eterno, ao Pai glorificai."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "    G                      C               G",
            "lyrics": "Com humildade, ó irmãos, apresentai-vos a Deus,"
          },
          {
            "chords": "  D           G                           D ",
            "lyrics": "Andai na santidade que convém a todos os Seus,"
          },
          {
            "chords": "           D7     G      Em              B7 ",
            "lyrics": "Com toda a vossa vida honrai a Quem vos amou,"
          },
          {
            "chords": "  C             G       D           G",
            "lyrics": "Aquele que, do alto, a salvação mandou."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      }
    ]
  }
}
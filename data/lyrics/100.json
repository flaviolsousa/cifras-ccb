      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "     B                     B7              E",
            "lyrics": "Para esta vocação celeste, Deus nos tem chamado,"
          },
          {
            "chords": "       F#7                B",
            "lyrics": "Glória e louvor nós damos ao Senhor!"
          },
          {
            "chords": "                                  B7     E      D#7   C#m...",
            "lyrics": "Dentre_os povos e as tribos fomos nós comprados por Jesus,"
          },
          {
            "chords": "   F#7             B",
            "lyrics": "Louvemos nosso Remidor!"
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "      F#7                     B",
            "lyrics": "Todos juntos, jubilemos de um coração sincero,"
          },
          {
            "chords": "      E       G#7       C#7        F#7",
            "lyrics": "Dando honra_e glória_ao nosso Redentor;"
          },
          {
            "chords": "      B",
            "lyrics": "O seu sangue precioso"
          },
          {
            "chords": "    B7   E       D#7   C#m...",
            "lyrics": "Ele derramou por nós a cruz;"
          },
          {
            "chords": "  F#7               B",
            "lyrics": "Remidos somos do Senhor."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "      B                            B7             E",
            "lyrics": "Jesus Cristo, nosso Mestre, é_o Primeiro_e_o Derradeiro,"
          },
          {
            "chords": "    F#7                    B",
            "lyrics": "É o Rei dos reis, de todos é Senhor;"
          },
          {
            "chords": "                            B7    E     D#7    C#m...",
            "lyrics": "Ele nos conserva_unidos o caminho de justiça_e paz;"
          },
          {
            "chords": "   F#7              B",
            "lyrics": "Bendito seja_o Redentor!"
          }
        ]
      },
      {

{
  "version": "v2",
  "title": "Vivo por Cristo",
  "tone": "F",
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "F        C         Bb       F",
            "lyrics": "Vivo por Cristo, o bom Salvador;"
          },
          {
            "chords": "C       F        G           C ",
            "lyrics": "Vivo provando do Seu grande_amor."
          },
          {
            "chords": "F         C          Bb       A ",
            "lyrics": "Cristo, o Mestre, na cruz expirou;"
          },
          {
            "chords": "Bb      F         C7       F",
            "lyrics": "Por Sua morte, perdão me doou."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "  F                     Gm ",
            "lyrics": "Jesus, Pastor divino, entrego_a Ti meu ser,"
          },
          {
            "chords": "      C7           F        G          C ",
            "lyrics": "Pois, com Teu sacrifício, fizeste-me viver;"
          },
          {
            "chords": " F                      F7             Bb ",
            "lyrics": "Amor celeste_e santo mostraste sobre_a cruz;"
          },
          {
            "chords": "                 F     D7...  G7   C7     F",
            "lyrics": "Glorioso_é pertencer a Ti, ó  Salvador Jesus!"
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "F      C        Bb       F",
            "lyrics": "É um tesouro de grande valor"
          },
          {
            "chords": "C      F          G        C ",
            "lyrics": "A salvação que me deu o Senhor;"
          },
          {
            "chords": "F         C          Bb           A ",
            "lyrics": "Tenho_esperança de_entrar lá nos céus"
          },
          {
            "chords": "Bb       F         C7           F",
            "lyrics": "E, com o Mestre, estar junto_a Deus."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "F      C        Bb    F",
            "lyrics": "Humildemente eu atenderei"
          },
          {
            "chords": "C           F         G           C ",
            "lyrics": "Aos bons conselhos de Cristo, meu Rei;"
          },
          {
            "chords": "F          C       Bb       A ",
            "lyrics": "Em grande_apreço terei Seu amor;"
          },
          {
            "chords": "Bb       F       C7           F",
            "lyrics": "Glória e honra a Cristo,_o Senhor!"
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      }
    ]
  }

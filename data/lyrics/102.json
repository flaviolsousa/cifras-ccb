{
  "version": "v2",
  "title": "Sinto a voz divina do meu fiel Pastor",
  "tone": {
    "recommended": "D"
  },
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": " D               G    A7                 D",
            "lyrics": "Sinto a voz tão meiga de Cristo, o Redentor,"
          },
          {
            "chords": "Bm7              Em   A7               D",
            "lyrics": "Que sempre me consola com Seu sublime amor;"
          },
          {
            "chords": "               G     A7            D",
            "lyrics": "A pastos verdejantes sempre me guiará;"
          },
          {
            "chords": "Bm7            Em    A7          D",
            "lyrics": "Com seu calado santo me apascentará."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "D              G     A7              D",
            "lyrics": "Amigo Seu, me chama, meu Salvador Jesus;"
          },
          {
            "chords": "Bm7           Em    A7                D",
            "lyrics": "A Seu falar sublime dá compreensão e luz;"
          },
          {
            "chords": "                   G      A7              D",
            "lyrics": "Quero, aos pés do Mestre, continuamente estar;"
          },
          {
            "chords": "Bm7                Em      A7             D",
            "lyrics": "Quero, nos Seus conselhos, sempre me deleitar."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "D             G     A7             D   ",
            "lyrics": "O meu divino Mestre fala com mansidão"
          },
          {
            "chords": "Bm7            Em   A7             D",
            "lyrics": "E traz à minha alma grande consolação;"
          },
          {
            "chords": "               G       A7             D",
            "lyrics": "Em todas as angústias, na prova ou na dor,"
          },
          {
            "chords": "Bm7              Em    A7              D",
            "lyrics": "Dentro de mim eu sinto a voz do meu Senhor."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "D             Em   A7             D ",
            "lyrics": "Sinto a voz divina do meu fiel Pastor,"
          },
          {
            "chords": "Bm7             Em   A7            D",
            "lyrics": "Que sempre me ensina com infinito amor;"
          },
          {
            "chords": "              Em  A7              D",
            "lyrics": "A Sua face um dia na glória eu verei;"
          },
          {
            "chords": "Bm7          Em    A7           D",
            "lyrics": "Na bem-aventurança regozijar-me-ei."
          }
        ]
      }
    ]
  }
}
        "code": "1",
        "verses": [
          {
            "chords": "B                 F#7                      B",
            "lyrics": "Vem, ó Senhor, ajudar-me nas minhas tribulações."
          },
          {
            "chords": "                      F#7         B",
            "lyrics": "Eu, confiante,_espero Tuas libertações."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "B             F#7                  B",
            "lyrics": "Vem ajudar-me sempre, ó forte Defensor,"
          },
          {
            "chords": "               E    F#7            B",
            "lyrics": "Para que nesta vida possa ser vencedor."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "B                 F#7                     B",
            "lyrics": "Vem, ó Senhor, ajudar-me neste meu peregrinar;"
          },
          {
            "chords": "                      F#7          B",
            "lyrics": "Nas provações e lutas podes me abrigar."
          }
        ]
      },
      {

          {
            "chords": "B                 F#7                   B",
            "lyrics": "Vem, ó Senhor, ajudar-me para poder batalhar;"
          },
          {
            "chords": "                    F#7          B",
            "lyrics": "Reveste-me de força para não vacilar."
          }

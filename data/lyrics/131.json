        "code": "1",
        "verses": [
          {
            "chords": "G           D7                    G",
            "lyrics": "Ó Senhor glorioso, Deus da perfeição,"
          },
          {
            "chords": "Em          D     A7         D    D7",
            "lyrics": "Tu nos libertaste da escravidão;"
          },
          {
            "chords": "G            D7                   G",
            "lyrics": "Caminhando_estamos ao Teu lar de_amor,"
          },
          {
            "chords": "    D°    Am      D7          G",
            "lyrics": "Entoando, sempre, hinos de louvor."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "G            D7                   G",
            "lyrics": "Na jornada_estamos para_o céu, Senhor,"
          },
          {
            "chords": "Em        D      A7          D    D7",
            "lyrics": "Nela encontramos provações e dor,"
          },
          {
            "chords": "G            D7             G",
            "lyrics": "Mas jamais viremos a desfalecer,"
          },
          {
            "chords": "     D°  Am    D7           G",
            "lyrics": "Pela esperança de Teu rosto ver."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "G          D7                    G",
            "lyrics": "Vales e montanhas nos farás transpor,"
          },
          {
            "chords": "Em        D      A7          D    D7",
            "lyrics": "E o mar revolto, ó Deus, Criador;"
          },
          {
            "chords": "G          D7               G",
            "lyrics": "Nada nesta terra pode nos parar,"
          },
          {
            "chords": "     D°    Am   D7        G",
            "lyrics": "Nada nos impede de Te exaltar."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "4",
        "verses": [
          {
            "chords": "G              D7                    G",
            "lyrics": "Já bem longe_estamos, na jornada,_ó Deus,"
          },
          {
            "chords": "Em         D       A7           D    D7",
            "lyrics": "E já contemplamos, pela fé, os céus,"
          },
          {
            "chords": "G        D7                 G",
            "lyrics": "E a nova terra que Tu nos darás,"
          },
          {
            "chords": "      D°     Am      D7       G",
            "lyrics": "Onde, com os santos, Tu habitarás."
          }
        ]
      }
    ]

{
  "version": "v2",
  "title": "A Caridade",
  "tone": "A",
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "    A                        D         A",
            "lyrics": "Esperança e fé sustêm nossa vida no Senhor,"
          },
          {
            "chords": "      E           A",
            "lyrics": "Na firmeza e santidade;"
          },
          {
            "chords": "                                 D         A",
            "lyrics": "Esses dons que vêm dos céus levarão ao Criador"
          },
          {
            "chords": "         D          E          A",
            "lyrics": "Os que andarem na divina Caridade."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "  A             D ",
            "lyrics": "A Caridade é a perfeição"
          },
          {
            "chords": "    A               E ",
            "lyrics": "Que permanece eternamente;"
          },
          {
            "chords": "   A                  D                   A",
            "lyrics": "O fiel a Deus, que em si a possuir, receberá"
          },
          {
            "chords": "             E  A",
            "lyrics": "Galardão excelente."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "      A                      D           A",
            "lyrics": "Se falarmos, ó irmãos, a linguagem celestial"
          },
          {
            "chords": "        E             A",
            "lyrics": "E a dos homens, em verdade."
          },
          {
            "chords": "                      D           A",
            "lyrics": "Isso não nos levará à cidade eternal,"
          },
          {
            "chords": "       D           E          A",
            "lyrics": "Se em nós não estiver a Caridade."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "         A                     D          A",
            "lyrics": "Para os santos do Senhor, é virtude sem igual"
          },
          {
            "chords": "      E          A",
            "lyrics": "A excelente Caridade;"
          },
          {
            "chords": "                           D             A",
            "lyrics": "Revestidos desse bem, venceremos todo o mal"
          },
          {
            "chords": "    D              E             A",
            "lyrics": "E veremos Deus, o Pai da eternidade."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      }
    ]
  }
}
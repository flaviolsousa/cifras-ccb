        "verses": [
          {
            "chords": "   G                    D            G",
            "lyrics": "“Setenta vezes sete ao teu irmão perdoa”,"
          },
          {
            "chords": "  C            D                   G",
            "lyrics": "Assim falou o Mestre ao ser interrogado;"
          },
          {
            "chords": "                      D        G",
            "lyrics": "Se tu o perdoares, serás abençoado"
          },
          {
            "chords": "   C        D                     G",
            "lyrics": "E bem-aventurado. Sublime é_o perdão!"
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "   G                     D              G",
            "lyrics": "Medita,_irmão amado, no grande_amor de Cristo"
          },
          {
            "chords": "   C           D                G ",
            "lyrics": "E busca_a excelente, eterna Caridade;"
          },
          {
            "chords": "                        D           G",
            "lyrics": "Caminha na justiça, na paz, na santidade,"
          },
          {
            "chords": "    C        D                     G",
            "lyrics": "Em toda humildade. Sublime é_o perdão!"
          }
        ]
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "    G                      D         G",
            "lyrics": "Se teu irmão amares de_um coração sincero,"
          },
          {
            "chords": "  C            D                   G ",
            "lyrics": "Terás a vida_eterna na celestial cidade;"
          },
          {
            "chords": "                   D             G",
            "lyrics": "Embora ofendido, suporta com piedade,"
          },
          {
            "chords": "    C            D                    G",
            "lyrics": "Conserva_a santidade. Sublime é_o perdão!"
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "    D                           G",
            "lyrics": "Perdoa teu irmão de todo_o coração,"
          },
          {
            "chords": "  C             D                 G",
            "lyrics": "Assim terás cumprido o santo mandamento;"
          },
          {
            "chords": "   D                              G",
            "lyrics": "Também terás perdão e paz no coração;"
          },
          {
            "chords": "     C             D                      G",
            "lyrics": "Por Deus serás benquisto. Sublime é_o perdão!"
          }
        ]

{
  "version": "v2",
  "title": "Nas moradas do Senhor",
  "tone": "D",
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "       D",
            "lyrics": "Nas moradas do Senhor não há pranto, não há dor,"
          },
          {
            "chords": "      A7                      D",
            "lyrics": "Todos lá desfrutarão o bem superno;"
          },
          {
            "chords": "      Bm           F#7      G         D",
            "lyrics": "Lá também desejo estar e a Cristo entoar,"
          },
          {
            "chords": "                                A7 D",
            "lyrics": "Com os santos, hinos de louvor eterno."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "      D",
            "lyrics": "Lá no céu cantarei"
          },
          {
            "chords": "      G          D           A7 ",
            "lyrics": "Novos hinos a Jesus, fiel Cordeiro."
          },
          {
            "chords": "                 D                      G ",
            "lyrics": "Todo pranto findará, toda angústia cessará."
          },
          {
            "chords": "          D             A7                D",
            "lyrics": "Glória a Deus que, por amor, me fez herdeiro!"
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "        D",
            "lyrics": "Meu prazer será sem par lá no céu, ao contemplar,"
          },
          {
            "chords": "      A7                     D",
            "lyrics": "De Jesus, a santa face, gloriosa;"
          },
          {
            "chords": "      Bm           F#7           G              D",
            "lyrics": "Sinto júbilo em pensar que, com Cristo, irei morar,"
          },
          {
            "chords": "                                 A7  D",
            "lyrics": "Pois terei no céu a herança precio - sa."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "        D",
            "lyrics": "Na eternal Jerusalém, onde existe só o bem,"
          },
          {
            "chords": "     A7                           D",
            "lyrics": "Entrarei com Jesus Cristo, alegremente;"
          },
          {
            "chords": "          Bm          F#7           G             D",
            "lyrics": "Junto aos santos cantarei; Glória! Glória ao meu Rei!"
          },
          {
            "chords": "                        A7 D",
            "lyrics": "Regozijo sentirei eternamente."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      }
    ]
  }
}
  "score": {
    "introduction": ["G", "Em", "D", "G"],
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "G         Em      D        G",
            "lyrics": "Faz-nos ouvir Tua voz gloriosa,"
          },
          {
            "chords": "C       G         D7      G",
            "lyrics": "Ó nosso Mestre, fiel Redentor;"
          },
          {
            "chords": "G     Em        D      G",
            "lyrics": "A Tua igreja, dileta esposa,"
          },
          {
            "chords": "C         G     D7     G",
            "lyrics": "Sente por Ti inefável amor."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "D      G         D     G",
            "lyrics": "Ó caro Salvador, a Tua voz de amor"
          },
          {
            "chords": "C        G            Am       B7",
            "lyrics": "Nos guia para o céus, glorioso lar;"
          },
          {
            "chords": "C      G         D        G",
            "lyrics": "Pela Palavra vem nos consolar."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "G       Em        D       G",
            "lyrics": "Ó Jesus Cristo, celeste Esposo,"
          },
          {
            "chords": "C        G            D7          G",
            "lyrics": "Vem conduzir-nos, por Teu grande amor;"
          },
          {
            "chords": "G      Em       D        G",
            "lyrics": "Já antevemos, ó Rei majestoso,"
          },
          {
            "chords": "C         G        D7        G",
            "lyrics": "A glória eterna do Teu esplendor."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "G      Em      D         G",
            "lyrics": "A Tua igreja está se adornando"
          },
          {
            "chords": "C         G          D7        G",
            "lyrics": "Para encontrar-se Contigo, ó Jesus;"
          },
          {
            "chords": "G          Em        D       G",
            "lyrics": "Com santas vestes, está aguardando"
          },
          {
            "chords": "C       G       D7       G",
            "lyrics": "Ver Tua face no reino de luz."
          }
        ]
      },
      {

{
  "version": "v2",
  "title": "Teu amor, ó Cordeiro divinal",
  "tone": "E",
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "    E                     A              B ",
            "lyrics": "Que obra pode se_igualar àquela sobre_a cruz?"
          },
          {
            "chords": "    E                     A     B7   E",
            "lyrics": "Que morte pode resgatar senão a de Jesus?"
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "     E                   B ",
            "lyrics": "Teu amor, Teu amor, ó Cordeiro divinal,"
          },
          {
            "chords": "    B7                    E",
            "lyrics": "Só agora é que posso_entender:"
          },
          {
            "chords": "     A                  E",
            "lyrics": "Tu pagaste a Deus meu pecado, meu mal,"
          },
          {
            "chords": "    A       B7          E",
            "lyrics": "E fizeste feliz o meu viver."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "    E                           A            B ",
            "lyrics": "Por toda_a minha transgreção morreu Jesus, o Rei;"
          },
          {
            "chords": "  E                      A      B7   E",
            "lyrics": "A Sua_imensa compaixão jamais esquecerei."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "  E                           A          B ",
            "lyrics": "Ó meu Jesus, que Te darei por todo esse_amor?"
          },
          {
            "chords": "    E                      A       B7   E",
            "lyrics": "Meu ser a Ti entregarei, serei Teu servidor."
          }
        ]
      },

        "verses": [
          {
            "chords": "      D",
            "lyrics": "O que hoje é mistério para_os santos do Senhor,"
          },
          {
            "chords": "    G                        E          A ",
            "lyrics": "Revelado lhes será por Seu Espírito de_amor,"
          },
          {
            "chords": "       D                         G        E... ",
            "lyrics": "Pois está em Jesus Cristo_a plenitude divinal"
          },
          {
            "chords": "     A                      D          D...",
            "lyrics": "E os justos participam do segredo celestial."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "      D",
            "lyrics": "Jesus Cristo_habita_em nós,"
          },
          {
            "chords": "     G  E            A ",
            "lyrics": "Sua luz   habita_em nós;"
          },
          {
            "chords": "      D                      G          E... ",
            "lyrics": "Nesta graça preciosa não nos sentiremos sós;"
          },
          {
            "chords": "         A                     D                D...",
            "lyrics": "Glória! Glória! Aleluia! Jesus Cristo_habita_em nós!"
          }
        ]
      },
      {

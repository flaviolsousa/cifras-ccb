{
  "version": "v2",
  "title": "Vamos, ó irmãos, marchar",
  "tone": "B",
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "       B                         E ",
            "lyrics": "Vamos, ó irmãos, marchar sempre_avante para_o céu,"
          },
          {
            "chords": "     F#7                     B",
            "lyrics": "Confiantes, nas pisadas de Jesus,"
          },
          {
            "chords": "                             E  ",
            "lyrics": "Pois à frente Ele_está e por nós combaterá,"
          },
          {
            "chords": "     F#7                     B",
            "lyrics": "Desfará as trevas com a Sua luz."
          }
        ]
      },
      {
        "type": "chorus",
        "verses": [
          {
            "chords": "      F#7                       B",
            "lyrics": "Com Jesus marchemos à_eternal Sião,"
          },
          {
            "chords": "       E                      F#7 ",
            "lyrics": "Bem cingidos de justiça_e retidão,"
          },
          {
            "chords": "       B                                E ",
            "lyrics": "Pois à frente Ele_está e ao céu nos levará,"
          },
          {
            "chords": "      F#7                 B",
            "lyrics": "Onde_iremos receber galardão."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "       B                       E ",
            "lyrics": "Cristo nos conduz a Deus com a Sua forte mão,"
          },
          {
            "chords": "    F#7                      B",
            "lyrics": "Valorosos, caminhemos nessa luz,"
          },
          {
            "chords": "                               E ",
            "lyrics": "Pois à frente Ele_está, nossos passos guiará;"
          },
          {
            "chords": "     F#7                       B",
            "lyrics": "Confiemos em Jesus, que nos conduz."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "        B                    E ",
            "lyrics": "Sempre_unidos, ó irmãos, em amor e comunhão,"
          },
          {
            "chords": "      F#7                     B",
            "lyrics": "Prossigamos nas pisadas de Jesus,"
          },
          {
            "chords": "                            E ",
            "lyrics": "Pois à frente Ele_está, a vitória nos dará,"
          },
          {
            "chords": "     F#7                       B",
            "lyrics": "Se andarmos, ó irmãos, em Sua luz."
          }
        ]
      },
      {
        "type": "ref",
        "ref": "score.stanzas[1]"
      }
    ]
  }
}
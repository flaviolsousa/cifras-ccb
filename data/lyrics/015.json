{
  "version": "v2",
  "title": "Ó alma que choras",
  "tone": "A",
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "A                  E              A",
            "lyrics": "Ó alma que choras com grande amargor,"
          },
          {
            "chords": "                  B7            E ",
            "lyrics": "Se queres alívio, recorre ao Senhor;"
          },
          {
            "chords": "                   A",
            "lyrics": "A Ele implorando, conforto acharás;"
          },
          {
            "chords": " A7         D     E         A",
            "lyrics": "Graça, e virtude, e vida terás."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "A             E           A",
            "lyrics": "Amigo sincero é Cristo Jesus,"
          },
          {
            "chords": "                     B7           E ",
            "lyrics": "Que salva o perdido, ao céu o conduz,"
          },
          {
            "chords": "                A",
            "lyrics": "Tua voz levanta ao bom Redentor,"
          },
          {
            "chords": " A7         D       E              A",
            "lyrics": "Clama por socorro, clama ao teu Senhor."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "A               E             A",
            "lyrics": "Ó alma cansada, recorre ao Senhor,"
          },
          {
            "chords": "                B7         E ",
            "lyrics": "Ele te sustenta e te dá vigor;"
          },
          {
            "chords": "                 A",
            "lyrics": "Auxílio do alto não falta jamais,"
          },
          {
            "chords": "A7           D   E             A",
            "lyrics": "Em Cristo confia e não chores mais."
          }
        ]
      }
    ]
  }

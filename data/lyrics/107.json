{
  "version": "v2",
  "title": "O fim de tudo chegará",
  "tone": {
    "recommended": "F"
  },
  "score": {
    "stanzas": [
      {
        "type": "lyric",
        "code": "1",
        "verses": [
          {
            "chords": "   F                     Gm  C   F",
            "lyrics": "O fim de tudo chegará, ouvi, pecadores,"
          },
          {
            "chords": "                         Gm    C    F",
            "lyrics": "Só Cristo vos perdoará e vida vos dará;"
          },
          {
            "chords": "                          Gm  C        F",
            "lyrics": "O fim está bem perto, bem per-to, bem perto,"
          },
          {
            "chords": "                         Gm        C       F",
            "lyrics": "Fazei então concerto com Quem vos quer salvar;"
          },
          {
            "chords": "     C         F       C              F",
            "lyrics": "Ó vinde, contritos, depressa, sem tardar,"
          },
          {
            "chords": "      C       F         Gm      C        F",
            "lyrics": "A Cristo piedoso, que a glória vos quer dar."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "2",
        "verses": [
          {
            "chords": "  F                        Gm  C        F",
            "lyrics": "Arrependei-vos e aceitai a Cristo, o Cordeiro;"
          },
          {
            "chords": "                              Gm    C     F",
            "lyrics": "A Ele as culpas confessai e o mundo rejeitai;"
          },
          {
            "chords": "                             Gm     C       F",
            "lyrics": "Não desprezeis a sorte, pois grande é essa sorte"
          },
          {
            "chords": "                       Gm   C       F",
            "lyrics": "Que livrará da morte e do eterno ardor;"
          },
          {
            "chords": "    C        F       C            F",
            "lyrics": "Da ira vindoura vos livra o redentor;"
          },
          {
            "chords": "      C       F    Gm         C    F",
            "lyrics": "Perfeito refúgio é Cristo, o Salvador."
          }
        ]
      },
      {
        "type": "lyric",
        "code": "3",
        "verses": [
          {
            "chords": "   F                       Gm   C      F",
            "lyrics": "Ó vinde já vos entregar, Jesus vos convida"
          },
          {
            "chords": "                             Gm     C     F",
            "lyrics": "E quer a Deus vos adotar, também herança dar;"
          },
          {
            "chords": "                      Gm   C    F",
            "lyrics": "É grande Seu afeto, divi - no afeto,"
          },
          {
            "chords": "                          Gm    C     F",
            "lyrics": "É o Seu amor, perfeito, potente a salvar;"
          },
          {
            "chords": "     C         F       C             F",
            "lyrics": "Ó vinde, depressa, as bênçãos desfrutar,"
          },
          {
            "chords": "        C      F   Gm       C      F",
            "lyrics": "Com glória eterna ireis no céu reinar."
          }
        ]
      }
    ]
  }
}
        "verses": [
          {
            "chords": "     G                  C       G",
            "lyrics": "Oh! Vem despertar-nos, amado Senhor;"
          },
          {
            "chords": "    D              G        D...",
            "lyrics": "O_Espírito Santo envia dos céus;"
          },
          {
            "chords": "    G                      C...",
            "lyrics": "Com fé aguardamos o Consolador,"
          },
          {
            "chords": "     D                G",
            "lyrics": "Que faz virtuosos os Teus."
          }
        ]
      },
